/etc/ssh/sshd_config
/etc/ssh/ssh_config
GSSAPIAuthentication yes
GSSAPIKeyExchange yes
GSSAPICleanupCredentials yes

ADDUSER SSHDAEM DFLTGRP(OMVSGRP) PASSWORD(tmppass) OMVS(UID(0) PROGRAM('/bin/sh') HOME('/') SHARED)
PERMIT BPX.DAEMON CLASS(FACILITY) ID(SSHDAEM) ACCESS(READ)
SETROPTS RACLIST(FACILITY) REFRESH

SETROPTS GENERIC(STARTED)
RDEFINE STARTED SSHD.* STDATA(USER(SSHDAEM) GROUP(OMVSGRP) TRUSTED(NO)
SETROPTS RACLIST(STARTED) REFRESH


ALTUSER SSHDAEM PASSWORD(password) NOEXPIRED KERB(KERBNAME('host/zos.jake.net'))
ADDGROUP STANDARD OMVS(GID(1005))
ADDUSER DFLTGRP(STANDARD) JAKE PASSWORD(PASSWORD) OMVS(UID(1005) PROGRAM('/bin/sh'))
ALTUSER JAKE PASSWORD(PASSWORD) NOEXPIRED KERB(KERBNAME('jake'))


ALTUSER SSHDAEM NOPASSWORD

IBMUSER:/u/ibmuser: > cat /var/run/sshd.pid
65613
IBMUSER:/u/ibmuser: >kill -s KILL 65613


ALTUSER SSHDAEM DFLTGRP(OMVSGRP) PASSWORD(tmppass) OMVS(UID(0) PROGRAM('/bin/sh') HOME('/') SHARED)
RALTER STARTED SSHD.* STDATA(USER(SSHDAEM) TRUSTED(NO))
RDELETE STARTED SSHD.*
